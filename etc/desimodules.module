        module load fitsio-hpcp/d1fb9f2_9aff5bc6-4.0
        module load requests-hpcp/2.8.1_8c18c9a4-4.0
    }} elseif {{ $env(NERSC_HOST) == "datatran" }} {{
        module load astropy-hpcp/1.0.1_f4385b62-1.0
        module load scipy-hpcp/0.15.1_3ec027f3-1.0
        module load matplotlib-hpcp/1.4.3_bfb50b98-1.0
        module load ipython-hpcp/3.0.0_c49d793a-1.0
